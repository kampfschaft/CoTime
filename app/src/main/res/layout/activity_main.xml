<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eaedf2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANGEMELDET: "
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="#00796B"/>
        <TextView
            android:id="@+id/main_angemeldet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="#FF9800"/>
    </LinearLayout>

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>
    <TextView
        android:id="@+id/nograph"
        android:text="eine Graph zuerst selektieren"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="#eaedf2"
        android:visibility="gone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="MEHR MACHEN"
            android:textStyle="bold"
            android:textColor="#00796B"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title_main_taetigkeit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="left"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#212121"
            android:text="TÄTIGKEIT"/>
        <TextView
            android:id="@+id/title_main_anzahl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#212121"
            android:text="IST"/>
        <TextView
            android:id="@+id/title_main_einheit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#212121"
            android:text="EINHEIT"/>
        <TextView
            android:id="@+id/title_main_targetValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#212121"
            android:text="SOLL"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:textColor="#757575">
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="WENIGER MACHEN"
        android:textStyle="bold"
        android:textColor="#00796B"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title_main_taetigkeit2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="left"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#212121"
            android:text="TÄTIGKEIT"/>
        <TextView
            android:id="@+id/title_main_anzahl2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#212121"
            android:text="IST"/>
        <TextView
            android:id="@+id/title_main_einheit2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#212121"
            android:text="EINHEIT"/>
        <TextView
            android:id="@+id/title_main_targetValue2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#212121"
            android:text="SOLL"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="1dp"
        android:textColor="#757575">
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="#00796B"
        android:layout_marginTop="4dp"
        android:text=" "
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#00796B"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ziel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="2dp"
            android:onClick="einfuegen"
            android:text="@string/btn_act_main_ziel"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/button_orange" />

        <org.lucasr.twowayview.TwoWayView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/main_slider"
            style="@style/TwoWayView"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:drawSelectorOnTop="true"
            android:layout_weight="5"
            android:layout_marginLeft="2dp"
            tools:context=".MainActivity"
            android:choiceMode="singleChoice"
            android:layout_alignParentBottom="true" />
    </LinearLayout>
</LinearLayout>

